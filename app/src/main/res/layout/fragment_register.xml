<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="RegisterFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--studentadmin-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/studentadminlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0"
            >
            <LinearLayout
                android:id="@+id/adminstudentcontainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="4dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                >
                <android.widget.Button
                    android:id="@+id/studentbutton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Student"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:background="@drawable/roundedcorner"
                    android:backgroundTint="@color/black10"
                    android:layout_marginHorizontal="3dp"
                    />
                <android.widget.Button
                    android:id="@+id/adminbutton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Admin"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    android:background="@drawable/roundedcorner"
                    android:backgroundTint="@color/black10"
                    android:layout_marginHorizontal="3dp"
                    />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:id="@+id/mainscroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/studentadminlayout"
            app:layout_constraintBottom_toTopOf="@id/registerbuttonlayout"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/maincontentscroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/regorusernamecomponent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"

                    >

                    <!--usernameblock ADMIN-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/usernameandfield"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="25dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <TextView
                            android:id="@+id/usernametext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:text="Username"
                            android:textSize="18sp"
                            android:textColor="@color/black50"
                            android:paddingBottom="5dp"
                            android:layout_marginLeft="5dp"
                            app:layout_constraintStart_toStartOf="@id/usernamefield"
                            app:layout_constraintEnd_toEndOf="@id/usernamefield"
                            app:layout_constraintBottom_toTopOf="@id/usernamefield"
                            app:layout_constraintHorizontal_bias="0"
                            app:layout_constraintVertical_bias="0" />

                        <EditText
                            android:id="@+id/usernamefield"
                            android:layout_width="match_parent"
                            android:layout_marginEnd="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/roundedcorner"
                            android:backgroundTint="@color/black10"
                            android:fontFamily="@font/roboto"
                            android:textSize="18sp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            />
                        <ImageView
                            android:id="@+id/checkUsernameBtn"
                            android:clickable="true"
                            android:layout_gravity="center"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/tick"
                            android:layout_margin="14dp"
                            app:layout_constraintStart_toEndOf="@id/usernamefield"
                            app:layout_constraintTop_toTopOf="@id/usernamefield"
                            app:layout_constraintBottom_toBottomOf="@id/usernamefield"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- registrationblock STUDENT -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/registrationandfield"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="25dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"

                        >

                        <TextView
                            android:id="@+id/registrationtext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:text="Registration No"
                            android:textSize="18sp"
                            android:textColor="@color/black50"
                            android:paddingBottom="5dp"
                            android:layout_marginLeft="5dp"
                            app:layout_constraintStart_toStartOf="@id/registrationfield"
                            app:layout_constraintEnd_toEndOf="@id/registrationfield"
                            app:layout_constraintBottom_toTopOf="@id/registrationfield"
                            app:layout_constraintHorizontal_bias="0"
                            app:layout_constraintVertical_bias="0" />

                        <EditText
                            android:id="@+id/registrationfield"
                            android:layout_width="match_parent"
                            android:layout_marginEnd="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/roundedcorner"
                            android:backgroundTint="@color/black10"
                            android:fontFamily="@font/roboto"
                            android:textSize="18sp"
                            android:inputType="text"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <ImageView
                            android:id="@+id/checkRegNoBtn"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/tick"
                            android:layout_margin="14dp"
                            app:layout_constraintStart_toEndOf="@id/registrationfield"
                            app:layout_constraintTop_toTopOf="@id/registrationfield"
                            app:layout_constraintBottom_toBottomOf="@id/registrationfield" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/emailandfield"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/regorusernamecomponent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/emailtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Email"
                        android:textSize="18sp"
                        android:textColor="@color/black50"
                        android:paddingBottom="5dp"
                        android:layout_marginLeft="5dp"
                        app:layout_constraintStart_toStartOf="@id/emailfield"
                        app:layout_constraintEnd_toEndOf="@id/emailfield"
                        app:layout_constraintBottom_toTopOf="@id/emailfield"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintVertical_bias="0" />

                    <EditText
                        android:id="@+id/emailfield"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/roundedcorner"
                        android:backgroundTint="@color/black10"
                        android:fontFamily="@font/roboto"
                        android:textSize="18sp"
                        android:inputType="textEmailAddress"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>



                <!--passwordblock-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/passwordandfield"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="-10dp"
                    app:layout_constraintTop_toBottomOf="@id/emailandfield"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/passwordtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Password"
                        android:textSize="18sp"
                        android:textColor="@color/black50"
                        android:paddingBottom="5dp"
                        android:layout_marginLeft="5dp"
                        app:layout_constraintStart_toStartOf="@id/passwordfield"
                        app:layout_constraintEnd_toEndOf="@id/passwordfield"
                        app:layout_constraintBottom_toTopOf="@id/passwordfield"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintVertical_bias="0" />

                    <EditText
                        android:id="@+id/passwordfield"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/roundedcorner"
                        android:backgroundTint="@color/black10"
                        android:fontFamily="@font/roboto"
                        android:textSize="18sp"
                        android:inputType="textPassword"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>


                <!--nameblock-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/nameandfield"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="-10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/passwordandfield"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0"
                    >

                    <TextView
                        android:id="@+id/nametext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Name"
                        android:textSize="18sp"
                        android:textColor="@color/black50"
                        app:layout_constraintBottom_toTopOf="@id/namefield"
                        app:layout_constraintEnd_toEndOf="@id/namefield"
                        app:layout_constraintStart_toStartOf="@id/namefield"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintVertical_bias="0"
                        android:paddingBottom="5dp"
                        android:layout_marginLeft="5dp"
                        />


                    <EditText
                        android:id="@+id/namefield"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/roundedcorner"
                        android:backgroundTint="@color/black10"
                        android:fontFamily="@font/roboto"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <!--boysandgirlslayout-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/boysgirlslayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/nameandfield"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0">

                    <LinearLayout
                        android:id="@+id/boysgirlscontainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="4dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginVertical="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <android.widget.Button
                            android:id="@+id/boysbutton"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:text="Boys"
                            android:textAllCaps="false"
                            android:textSize="20sp"
                            android:background="@drawable/roundedcorner"
                            android:backgroundTint="@color/black10"
                            android:layout_marginHorizontal="3dp" />

                        <android.widget.Button
                            android:id="@+id/girlsbutton"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:text="Girls"
                            android:textSize="20sp"
                            android:textAllCaps="false"
                            android:background="@drawable/roundedcorner"
                            android:backgroundTint="@color/black10"
                            android:layout_marginHorizontal="3dp" />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!--messsection-->
                <LinearLayout
                    android:id="@+id/messectionlayout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/boysgirlslayout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginHorizontal="25dp"
                    >
                    <TextView
                        android:id="@+id/messtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Mess"
                        android:textSize="18sp"
                        android:textColor="@color/black50"
                        app:layout_constraintBottom_toTopOf="@id/boysgirlslayout"
                        app:layout_constraintEnd_toEndOf="@id/boysgirlslayout"
                        app:layout_constraintStart_toStartOf="@id/boysgirlslayout"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintVertical_bias="0"
                        android:paddingBottom="5dp"
                        android:layout_marginLeft="5dp"
                        />

                    <com.google.android.flexbox.FlexboxLayout
                        android:id="@+id/allmesscontainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        app:flexWrap="wrap"
                        app:flexDirection="row"
                        app:justifyContent="flex_start"
                        >

                    </com.google.android.flexbox.FlexboxLayout>

                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>



        </ScrollView>


        <LinearLayout
            android:id="@+id/registerbuttonlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mainscroll"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintHorizontal_bias="0.65"
            >
            <android.widget.Button
                android:id="@+id/registerbutton"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:paddingHorizontal="40dp"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto_bold"
                android:textSize="20sp"
                android:textColor="@color/black80"
                android:background="@drawable/roundedcornerpure"
                android:backgroundTint="@color/black10"
                />

            <ImageView
                android:id="@+id/registerStatusIcon"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/tick"
                android:layout_margin="14dp"
                />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>